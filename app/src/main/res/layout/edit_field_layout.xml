<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/EditFieldContainerStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <EditText
        android:id="@+id/idEditText"
        style="@style/EditTextFieldStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@id/idUndoEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:singleLine="false"
        android:scrollbars="none"
        android:overScrollMode="always"
        android:scrollbarStyle="insideOverlay"

        tools:ignore="LabelFor" />

    <ImageButton
        android:id="@+id/idUndoEdit"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:contentDescription="@string/cancel"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_cancel_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/idEditText"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#bbbbbb" />

    <TextView
        android:id="@+id/idEditLabel"
        style="@style/EditFieldLabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleLabel"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

