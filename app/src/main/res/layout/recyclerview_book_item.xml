<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coverImageView"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:contentDescription="@string/book_image_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_loading"
            app:layout_constraintBottom_toBottomOf="@+id/authorView"
            card_view:layout_constraintEnd_toStartOf="@id/titleView"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleView"
            style="@style/BookCardFieldValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/default_title_string"
            android:textColor="@color/black"
            card_view:layout_constraintBottom_toTopOf="@id/authorView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/coverImageView"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/authorView"
            style="@style/BookCardFieldValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/default_author_string"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/coverImageView"
            card_view:layout_constraintTop_toBottomOf="@id/titleView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
