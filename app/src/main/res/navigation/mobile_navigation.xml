<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.anselm.books.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_DetailsFragment"
            app:destination="@id/nav_details" />

    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.anselm.books.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@id/nav_signin"
        android:name="com.anselm.books.ui.signin.GoogleSignInFragment"
        android:label="@string/menu_signin"
        tools:layout="@layout/fragment_settings" >
    </fragment>

    <fragment
        android:id="@id/nav_settings"
        android:name="com.anselm.books.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" >
    </fragment>

    <fragment
        android:id="@+id/nav_details"
        android:name="com.anselm.books.ui.details.DetailsFragment"
        android:label="@string/book_details"
        tools:layout="@layout/fragment_details">

        <argument
            android:name="bookId"
            app:argType="integer" />

    </fragment>

</navigation>